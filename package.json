{
  "name": "clip-boost",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "// Development": "====================",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "vite",
    "dev:full": "docker-compose up -d && npm run dev",
    "// Building": "====================",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "// Production": "====================",
    "start": "cd backend && npm start",
    "start:prod": "NODE_ENV=production npm start",
    "// Code Quality": "====================",
    "typecheck": "concurrently \"npm:typecheck:backend\" \"npm:typecheck:frontend\"",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:frontend": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint src backend/src --ext .ts,.tsx --fix",
    "// Import Checking": "====================",
    "check:imports": "pwsh ./scripts/check-imports.ps1 -Scope backend",
    "check:imports:frontend": "pwsh ./scripts/check-imports.ps1 -Scope frontend",
    "fix:imports:backend": "pwsh ./scripts/check-imports.ps1 -Scope backend -Fix",
    "fix:imports:frontend": "node ./scripts/fix-all-frontend-imports.cjs",
    "// Security": "====================",
    "security:check": "npm audit",
    "security:fix": "npm audit fix",
    "security:generate": "node scripts/generate-secrets.js",
    "// Docker": "====================",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "// Setup": "====================",
    "install:all": "npm install && cd backend && npm install",
    "setup": "npm run install:all && npm run security:generate",
    "clean": "rm -rf node_modules dist backend/node_modules backend/dist",
    "// Git Hooks": "====================",
    "prepare": "husky install",
    "dev:mock-server": "node tools/dev-server/server.mjs",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@mediapipe/camera_utils": "^0.3.1640029074",
    "@mediapipe/drawing_utils": "^0.3.1620248257",
    "@mediapipe/selfie_segmentation": "^0.1.1632777926",
    "axios": "^1.11.0",
    "classnames": "^2.5.1",
    "d3": "^7.9.0",
    "framer-motion": "^11.3.0",
    "i18next": "25.4.1",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.441.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.0",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.0",
    "recharts": "^2.12.0",
    "three": "^0.168.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-security": "2.1.0",
    "eslint-plugin-unicorn": "55.0.0",
    "glob": "^10.4.5",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "madge": "^6.1.0",
    "playwright": "^1.46.0",
    "prettier": "^3.6.2",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.43.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "overrides": {},
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
